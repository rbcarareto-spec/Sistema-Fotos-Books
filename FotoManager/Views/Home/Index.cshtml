@{
    ViewData["Title"] = "Início";
}

<section class="text-center py-4 bg-white rounded-4 shadow-sm mb-4" style="background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);">
    <div class="container">
        <i class="bi bi-camera-fill text-primary" style="font-size: 4rem;"></i>
        <h1 class="display-6 fw-bold mt-3">Bem-vindo ao FotoManager</h1>
        <p class="lead text-muted mb-4">
            Organize suas fotos, aplique filtros, crie álbuns personalizados e compartilhe momentos com estilo.
        </p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a asp-controller="Photo" asp-action="Index" class="btn btn-primary btn-lg px-4">
                <i class="bi bi-images me-2"></i> Ver Fotos
            </a>
            <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                <i class="bi bi-collection me-2"></i> Meus Álbuns
            </a>
        </div>
    </div>
</section>

<!-- Cards Rápidos -->
<div class="row text-center g-4">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <i class="bi bi-funnel-fill text-primary" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">Filtros Avançados</h5>
                <p class="text-muted">Aplique efeitos diretamente nas suas fotos com CSS moderno.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <i class="bi bi-collection-fill text-success" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">Álbuns Personalizados</h5>
                <p class="text-muted">Agrupe suas fotos em books temáticos com nome e descrição.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
                <i class="bi bi-pc-display-horizontal text-warning" style="font-size: 2.5rem;"></i>
                <h5 class="mt-3">Totalmente Responsivo</h5>
                <p class="text-muted">Funciona perfeitamente em celular, tablet e desktop.</p>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="text-center my-5">
    <a asp-controller="Photo" asp-action="Create" class="btn btn-success btn-lg px-5 py-3">
        <i class="bi bi-cloud-upload"></i> Enviar Nova Foto
    </a>
</div>