@model IEnumerable<FotoManager.Models.Book>

@{
    ViewData["Title"] = "Meus Álbuns";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-collection-fill text-primary"></i> Meus Álbuns</h2>
    <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
        <i class="bi bi-plus-circle me-2"></i> Novo Álbum
    </a>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-collection" style="font-size: 4rem; color: #adb5bd;"></i>
        <h4 class="text-muted mt-3">Nenhum álbum criado ainda</h4>
        <p class="text-secondary">Crie seu primeiro álbum para organizar suas fotos.</p>
        <a asp-action="Create" class="btn btn-outline-primary mt-2">Criar Agora</a>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var book in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-folder-fill text-warning me-2"></i> @book.Name
                            </h5>
                  
                            <span class="badge bg-secondary rounded-pill">
                                @book.Photos.Count @(book.Photos.Count == 1 ? "foto" : "fotos")
                            </span>
                        </div>
                        <p class="card-text text-muted flex-grow-1">
                            @(string.IsNullOrEmpty(book.Description) ? "Sem descrição" : book.Description)
                        </p>
                        <small class="text-muted">
                            Criado em: <strong>@book.CreatedAt.ToString("dd/MM/yyyy")</strong>
                        </small>
                        <div class="mt-3 d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-images me-1"></i> Ver Fotos
                            </a>
                            <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil me-1"></i> Editar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="mt-4">
    <a asp-controller="Photo" asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i> Voltar para Fotos
    </a>
</div>