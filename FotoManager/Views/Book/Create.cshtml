@model FotoManager.Models.Book

@{
    ViewData["Title"] = "Criar Novo Álbum";
}

<div class="d-flex align-items-center mb-4">
    <h2><i class="bi bi-plus-circle-fill text-success"></i> Criar Álbum</h2>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nome do Álbum</label>
                <input asp-for="Name" class="form-control form-control-lg" placeholder="Ex: Viagem para Praia 2025" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Descrição (opcional)</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Descreva o tema do álbum..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success btn-lg px-4">
                    <i class="bi bi-check2-circle me-2"></i> Salvar Álbum
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-x-circle me-2"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="text-decoration-none">
        <i class="bi bi-arrow-left"></i> Voltar para a lista
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}